cd "$(dirname "$0")/.."

source bin/ENV

echo "Building binary first..."
WORKDIR=/go/src/github.com/armory-io/dinghy
echo "Building docker image ${DOCKER_IMAGE}..."
docker build -f ./Dockerfile -t ${DOCKER_IMAGE} .
