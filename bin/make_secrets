#!/bin/bash
set -e
cd "$(dirname "$0")/.."

rm -dfr build/secrets
mkdir -p build/secrets

aws s3 cp s3://armory-keys/client.pem build/secrets/client.pem
aws s3 cp s3://armory-keys/github-dinghy-creds.txt build/secrets/github-creds.txt

arm secret build/secrets # This will prompt you for a secret name, default is "dinghy", just press enter
arm secret_deploy default dinghy
